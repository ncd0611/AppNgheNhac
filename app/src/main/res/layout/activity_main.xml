<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nghe Nhac"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/txtIdBai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài 1"
        android:textColor="#3374FB"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtTenBai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Độ ta không độ nàng"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtThoiGian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 min, 31 sec"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:gravity="right"/>

        <TextView
            android:id="@+id/txtTrangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa chạy"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnChonBai"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn bài"/>

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Play"/>

        <Button
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"/>
    </LinearLayout>

</LinearLayout>